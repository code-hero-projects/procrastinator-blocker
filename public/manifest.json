{
  "name": "Procrastination Blocker",
  "description": "Chrome Extension to stop procrastination!",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "64": "assets/icon64.png",
      "128": "assets/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "64": "assets/icon64.png",
    "128": "assets/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["assets/lord-of-the-rings.mp4", "assets/pulp-fiction.mp4", "assets/star-wars.mp4"],
    "matches": ["<all_urls>"]
  }]
}